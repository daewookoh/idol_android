<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_agree2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/cb_agree3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/background">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_agreement1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHeight_percent="0.3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_agreement1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/agreement1"
                    android:textColor="@color/text_default"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_required"
                    app:layout_constraintBottom_toTopOf="@id/rl_agreement1"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_required"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_default="wrap"
                    android:text="@string/essential"
                    android:textSize="14sp"
                    android:textColor="@color/main"
                    android:textStyle="bold"
                    android:layout_marginStart="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_agreement1"
                    app:layout_constraintBottom_toBottomOf="@id/tv_agreement1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_agreement1"/>

                <RelativeLayout
                    android:id="@+id/rl_agreement1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_agreement1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_agree1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/checkbox"
                        android:drawablePadding="6dp"
                        android:text="@string/agreement1_agree"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text_default"
                        android:textSize="12sp"
                        app:buttonCompat="@android:color/transparent" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/cb_agree1"
                        android:background="@drawable/bg_gray150_border_round"
                        android:padding="3dp">

                        <WebView
                            android:id="@+id/wv_agree1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/gray200"
                            android:textSize="13sp" />

                    </ScrollView>

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_agreement2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="18dp"
                app:layout_constraintHeight_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_agreement1"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_agreement2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_agreement"
                    android:textColor="@color/text_default"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_required2"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_required2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_default="wrap"
                    android:text="@string/essential"
                    android:textSize="14sp"
                    android:textColor="@color/main"
                    android:textStyle="bold"
                    android:layout_marginStart="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_agreement2"
                    app:layout_constraintBottom_toBottomOf="@id/tv_agreement2"
                    app:layout_constraintStart_toEndOf="@id/tv_agreement2"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_personal_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_personal_information1"
                    android:textColor="@color/text_default"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_agreement2"/>

                <RelativeLayout
                    android:id="@+id/relative2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_personal_information"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_personal_information2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/cb_agree2"
                        android:text="@string/msg_personal_information2"
                        android:textColor="@color/text_default"
                        android:textSize="12sp" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_agree2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/checkbox"
                        android:drawablePadding="6dp"
                        android:text="@string/agree_terms"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text_default"
                        android:textSize="12sp"
                        app:buttonCompat="@android:color/transparent" />

                    <ScrollView
                        android:id="@+id/sv_agree2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/tv_personal_information2"
                        android:background="@drawable/bg_gray150_border_round"
                        android:padding="3dp">

                        <WebView
                            android:id="@+id/wv_agree2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/gray200"
                            android:textSize="13sp" />

                    </ScrollView>

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_agree3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/checkbox"
            android:drawablePadding="6dp"
            android:layout_marginBottom="10dp"
            android:text="@string/signup_age_limit"
            android:textColor="@color/text_default"
            android:textSize="12sp"
            app:buttonCompat="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_agree2"
            app:layout_constraintBottom_toTopOf="@id/btn_next" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:text="@string/btn_next"
            android:background="@drawable/bg_round_boarder_gray200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
