<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data></data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_400">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_round_white_radius10"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                tools:text="@string/inquiry_category"
                android:textColor="@color/text_default"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/sv_my_inquiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constrainedHeight="true"
            android:minHeight="263dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="@drawable/bg_round_white_radius10"
            app:layout_constraintTop_toBottomOf="@id/cl_category"
            app:layout_constraintBottom_toTopOf="@id/cl_files">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_my_inquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/my_inquiry_title_const"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:id="@+id/inquiry_qna_q"
                        android:layout_width="14dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_marginStart="20dp"
                        android:paddingTop="3dp"
                        android:src="@drawable/icon_inquiry_qna_q"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/title_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        tools:text="test"
                        android:textColor="@color/text_default"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="64dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/inquiry_qna_q"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constrainedHeight="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginEnd="44dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_default"
                    android:textIsSelectable="true"
                    android:textSize="11sp"
                    tools:text=""
                    app:layout_constraintTop_toBottomOf="@id/my_inquiry_title_const"
                    app:layout_constraintBottom_toTopOf="@id/answer_wrapper"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/answer_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constrainedHeight="true"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/content"
                    app:layout_constraintBottom_toBottomOf="parent">


                    <ImageView
                        android:id="@+id/inquiry_qna_a"
                        android:layout_width="14dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_inquiry_qna_a"
                        android:paddingTop="3dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/answer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="53dp"
                        android:layout_marginBottom="15dp"
                        tools:text="test"
                        android:textColor="@color/text_default"
                        android:textIsSelectable="true"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/inquiry_qna_a"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constrainedHeight="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintTop_toBottomOf="@id/sv_my_inquiry"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_file_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/inquiry_files"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="*"
                android:textSize="11sp"
                android:textColor="@color/main"
                app:layout_constraintTop_toBottomOf="@id/tv_file_add"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_file_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="2dp"
                android:text="@string/delete_file_description"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                app:layout_constraintTop_toBottomOf="@id/tv_file_add"
                app:layout_constraintStart_toEndOf="@id/tv_star"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_saved_file"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/tv_file_description"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
