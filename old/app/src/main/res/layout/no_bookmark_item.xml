<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:background="@color/background_100">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/gray110"/>


        <ImageView
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:src="@drawable/img_favorite_bookmark"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/desc_bookmark"
                android:textColor="@color/text_default"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_agg_description"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_help"
                android:paddingStart="-23dp"
                app:layout_constraintTop_toTopOf="@id/tv_bookmark"
                app:layout_constraintBottom_toBottomOf="@id/tv_bookmark"
                app:layout_constraintStart_toEndOf="@id/tv_bookmark"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_bookmark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7.5dp"
            android:gravity="center"
            android:text="@string/desc_bookmark2"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <TextView
            android:id="@+id/btn_bookmark_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_radius50_gray100"
            android:text="@string/desc_bookmark3"
            android:textColor="@color/text_default"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>
</layout>
