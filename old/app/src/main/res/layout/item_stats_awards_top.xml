<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top_awards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_awards_category">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,360:113"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_top_arrow_down"
                android:layout_width="12dp"
                android:layout_height="8dp"
                android:src="@drawable/btn_arrow_down_gray"
                app:layout_constraintBottom_toBottomOf="@+id/tv_top_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_top_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constrainedHeight="true"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:textColor="@color/awards_yellow"
                android:textSize="18sp"
                android:maxLines="2"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeMinTextSize="13sp"
                app:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="최애돌 올해의 월드 초이스\n남자 아이돌" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
