<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="170dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:background="@color/background_200">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_total_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/themepick_total_votes"
            android:textSize="14dp"
            android:textColor="@color/text_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_total_vote_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:textColor="@color/text_default"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_total_vote"
            app:layout_constraintStart_toEndOf="@id/tv_total_vote"
            app:layout_constraintTop_toTopOf="@+id/tv_total_vote"
            tools:text="9,999,999í‘œ" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/award_guide_sub2"
            android:textSize="14dp"
            android:textColor="@color/text_gray"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/tv_total_vote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_period_data"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_period_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:textColor="@color/text_default"
            android:textSize="13dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv_period"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_period"
            app:layout_constraintTop_toTopOf="@+id/tv_period"
            tools:text="2024.02.02 ~ 2024.02.10" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cheering_comments"
            android:textSize="14dp"
            android:textColor="@color/text_gray"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_period"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/main200_radius6"
            app:layout_constraintTop_toTopOf="@+id/tv_comment"
            app:layout_constraintBottom_toBottomOf="@+id/tv_comment"
            app:layout_constraintStart_toEndOf="@id/tv_comment">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_comment_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/title_comment"
                android:textColor="@color/main_light"
                android:textSize="13dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow_left"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/arrow_left_to_right"
                android:layout_marginTop="1dp"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_comment_data"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <net.ib.mn.ui.AccordionMenu
            android:id="@+id/accordion_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_comment"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
