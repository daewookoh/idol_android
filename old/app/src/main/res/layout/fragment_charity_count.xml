<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_100">

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/lable_get_info"
        android:textColor="@color/text_dimmed"
        android:textSize="16sp"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_halloffame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_group"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn_record_history"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_up_two_tab"
                android:text="@string/record_room"
                android:textColor="@color/main"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cl_btn_group"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_btn_group"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_record_history">

                <Button
                    android:id="@+id/btn_angel_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_up_two_tab"
                    android:text="@string/charity_angel_count"
                    android:textColor="@color/text_dimmed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btn_fairy_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_up_two_tab"
                    android:text="@string/charity_fairy_count"
                    android:textColor="@color/gray200"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="13sp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_miracle_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/btn_up_two_tab"
                    android:text="@string/miracle_month_count"
                    android:textColor="@color/gray200"
                    android:textSize="13sp"
                    android:visibility="gone"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_group">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_angel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_angel_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="empty"
                    android:textColor="@color/gray200"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <ListView
                    android:id="@+id/lv_angel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/gray200"
                    android:dividerHeight=".5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:listSelector="@android:color/transparent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_fairy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_fairy_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="empty"
                    android:textColor="@color/gray200"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <ListView
                    android:id="@+id/lv_fairy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/gray200"
                    android:dividerHeight=".5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:listSelector="@android:color/transparent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_miracle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_miracle_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="empty"
                    android:textColor="@color/gray200"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <ListView
                    android:id="@+id/lv_miracle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/gray200"
                    android:dividerHeight=".5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:listSelector="@android:color/transparent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rl_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="12dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcy_history"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:divider="@color/gray200"
                    android:layout_marginTop="8dp"
                    android:dividerHeight=".5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_no_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/no_search_result"
                    android:visibility="gone"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_history_list"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
