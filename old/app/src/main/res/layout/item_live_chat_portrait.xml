<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>
    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_live_chat_message_portrait"
    android:layout_width="match_parent"
    android:paddingBottom="6dp"
    android:background="@color/background_400"
    android:paddingTop="6dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_nickname_live_chat_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ems="12"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="신화"
        android:textAlignment="viewStart"
        app:layout_constraintVertical_bias="0"
        android:textColor="@color/gray900"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_photo_live_chat_portrait"
        app:layout_constraintStart_toEndOf="@+id/iv_user_photo_live_chat_portrait"
        app:layout_constraintTop_toTopOf="@+id/iv_user_photo_live_chat_portrait"
        />

    <net.ib.mn.view.ExodusImageView
        android:id="@+id/iv_user_photo_live_chat_portrait"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/menu_profile_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_live_chat_message_portrait"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textColorLink="@color/gray580"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname_live_chat_portrait"
        app:layout_constraintStart_toEndOf="@+id/iv_user_photo_live_chat_portrait"
        tools:text="ㄴㄹㄴㅇㄹㄴ"
        android:textColor="@color/text_gray"
        android:textSize="13sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
