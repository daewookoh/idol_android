<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="18dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/background_100">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_present_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_passwd_current"
            android:textSize="14sp"
            android:textColor="@color/text_default"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_present_passwd"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/text_default"
            android:textColorHint="@color/text_dimmed"
            android:background="@drawable/bg_background_button_border_round"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_present_passwd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_new_passwd"
            android:textSize="14sp"
            android:textColor="@color/text_default"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/et_present_passwd" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_passwd"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_background_button_border_round"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/text_default"
            android:textColorHint="@color/text_dimmed"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_passwd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_passwd_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pwd_combination"
            android:textColor="@color/main"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/et_passwd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_passwd_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_new_passwd_confirm"
            android:textSize="14sp"
            android:textColor="@color/text_default"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_passwd_rule" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_passwd_confirm"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_background_button_border_round"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/text_default"
            android:textColorHint="@color/text_dimmed"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_passwd_confirm" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp"
            android:background="@drawable/bg_round_boarder_gray200"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
