<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_100"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="2018년 10월 11일"
        android:textAlignment="gravity"
        android:textColor="@color/gray200"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/view_date"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray80"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/schedule_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/schedule_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/text_default"/>

            <ImageView
                android:id="@+id/schedule_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/schedule_category_01"/>

            <TextView
                android:id="@+id/schedule_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="테스트"
                android:textColor="@color/text_default"
                android:textSize="13dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/schedule_edit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/icon_community_setting"/>

            <ImageView
                android:id="@+id/schedule_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/icon_community_trash"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/schedule_idol_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_schedule_person"/>

            <TextView
                android:id="@+id/schedule_idol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                tools:text="이민우, 에릭"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/schedule_url_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_schedule_link"/>

            <net.ib.mn.view.NoScrollingTextView
                android:id="@+id/schedule_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                tools:text="myloveidol.com"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/schedule_info_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8.5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_schedule_information"/>

            <TextView
                android:id="@+id/schedule_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="단콘가고싶드아!"
                android:textColor="@color/text_gray"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/schedule_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_map"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icon_schedule_map"/>

                <TextView
                    android:id="@+id/map_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="7.5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="test"
                    android:textAlignment="gravity"
                    android:textColor="@color/gray580"
                    android:textSize="9sp"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/schedule_user_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_level_15"/>

            <TextView
                android:id="@+id/schedule_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="후후후후"
                android:textColor="@color/text_gray"
                android:textSize="11sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gray_border_radius_bottom_start"
                android:gravity="center">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/icon_community_comment"
                    app:tint="@color/gray300"/>

                <TextView
                    android:id="@+id/schedule_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textColor="@color/gray300"
                    android:textSize="11sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/report1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="-0.5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_border_schedule"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_report1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    app:tint="@color/gray300"
                    android:src="@drawable/btn_schedule_yes_off"/>

                <TextView
                    android:id="@+id/tv_report1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_btn_yes"
                    android:textColor="@color/gray300"
                    android:textSize="11sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/report2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="-0.5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_border_radius_bottom_end"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_report2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    app:tint="@color/gray300"
                    android:src="@drawable/btn_schedule_no_off"/>

                <TextView
                    android:id="@+id/tv_report2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_btn_no"
                    android:textColor="@color/gray300"
                    android:textSize="11sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/report3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="-0.5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_border_radius_bottom_end"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_report3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/btn_schedule_overlap_off"/>

                <TextView
                    android:id="@+id/tv_report3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_btn_dup"
                    android:textColor="@color/gray300"
                    android:textSize="11sp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray80"/>

    </LinearLayout>

</LinearLayout>
