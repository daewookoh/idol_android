<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <net.ib.mn.view.ExodusImageView
        android:id="@+id/eiv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_gif"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/eiv_photo"
        app:layout_constraintRight_toRightOf="@id/eiv_photo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_mp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_mp4"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/eiv_photo"
        app:layout_constraintRight_toRightOf="@id/eiv_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>
