<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data></data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_live_chatting_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_live_chatting_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_border_top_bottom_gray100"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cl_live_chatting_bottom_sheet">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/live_chat"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_icon_live_chatting"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:src="@drawable/icon_streaming_chatting"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/textView6"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_icon_live_chatting_close"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingEnd="25dp"
                android:paddingStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@id/iv_icon_live_chatting"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/icon_streaming_x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@id/iv_icon_live_chatting"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_live_chatting_live_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_border_top_bottom_gray100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_live_chatting_top">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_streaming_hits_live_chat"
                android:layout_width="21dp"
                android:layout_height="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:srcCompat="@drawable/icon_streaming_hits" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_streaming_hits_live_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textColor="@color/gray300"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/icon_streaming_hits_live_chat"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_streaming_heart_live_chat"
                android:layout_width="21dp"
                android:layout_height="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/live_chat_barrier"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:srcCompat="@drawable/icon_streaming_heart" />


            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/live_chat_barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:barrierDirection="end"
                app:constraint_referenced_ids="tv_streaming_hits_live_chat,tv_streaming_users_live_chat" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_streaming_heart_live_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textColor="@color/gray300"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/icon_streaming_heart_live_chat"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_streaming_users_live_chat"
                android:layout_width="21dp"
                android:layout_height="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_streaming_hits_live_chat"
                app:layout_constraintVertical_bias="0"
                app:srcCompat="@drawable/icon_streaming_users" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_streaming_users_live_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="0"
                android:textColor="@color/gray300"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/icon_streaming_users_live_chat"
                app:layout_constraintTop_toBottomOf="@+id/icon_streaming_hits_live_chat"
                app:layout_constraintVertical_bias="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_streaming_users2_live_chat"
                android:layout_width="21dp"
                android:layout_height="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/live_chat_barrier"
                app:layout_constraintTop_toBottomOf="@+id/icon_streaming_heart_live_chat"
                app:layout_constraintVertical_bias="0"
                app:srcCompat="@drawable/icon_streaming_users_2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_streaming_users2_live_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="0"
                android:textColor="@color/gray300"
                android:textSize="14dp"
                android:textStyle="bold"

                app:layout_constraintStart_toEndOf="@+id/icon_streaming_users2_live_chat"
                app:layout_constraintTop_toBottomOf="@+id/icon_streaming_heart_live_chat"
                app:layout_constraintVertical_bias="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_streaming_like_live_chat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:srcCompat="@drawable/img_streaming_like" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_streaming_like_end_live_chat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:srcCompat="@drawable/img_streaming_like_end" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/ll_lottie_like_heart_container_live_chat"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@id/heart_animation_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/heart_animation_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="120dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcy_live_chatting_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@color/background_400"
            app:stackFromEnd="true"
            app:reverseLayout="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/footer_live_chat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_live_chatting_live_info"
            tools:layout_editor_absoluteY="18dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/scroll_to_bottom_btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/footer_live_chat"
            android:background="@drawable/bg_btn_scroll_to_bottom"
            android:contentDescription="scrollToBottomButton" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/footer_live_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_400"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_btn_live_chat"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/icon_chatting_send"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/message_input_live_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/white_chat_textview_border_round"
                android:includeFontPadding="false"
                android:inputType="textMultiLine"
                android:maxHeight="100dp"
                android:minHeight="32dp"
                android:maxLength="100"
                android:nextFocusLeft="@id/input_comment"
                android:nextFocusUp="@id/input_comment"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                android:paddingEnd="10dp"
                android:paddingBottom="7dp"
                android:scrollbars="none"
                android:scrollHorizontally="true"
                android:textAlignment="viewStart"
                android:textColor="@color/text_gray"
                android:textColorHint="@color/gray200"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/submit_btn_live_chat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlCompat" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
