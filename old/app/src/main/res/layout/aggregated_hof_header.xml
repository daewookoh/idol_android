<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="view"
            type="net.ib.mn.fragment.HallOfFameAggFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/period"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/gray50"
                android:gravity="center"
                android:textColor="@color/text_dimmed"
                android:textSize="14sp"
                tools:text="2015.5.1 오전 11시 - 2015.5.30 현재" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_hof_info"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="9dp"
                android:src="@drawable/btn_info_black"
                android:onClick="@{() -> view.openInfoScreen()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_idol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_100">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/bg_cumulative_voting" />

            <ImageView
                android:id="@+id/iv_icon_up"
                android:layout_width="35dp"
                android:layout_height="28dp"
                android:visibility="visible"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintVertical_bias="0.13"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/best1_profile"
                android:src="@drawable/icon_up" />


            <TextView
                android:id="@+id/tv_increase_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0.03"
                app:layout_constraintHorizontal_bias="0.66"
                app:layout_constraintTop_toBottomOf="@+id/iv_icon_up"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/main_light"
                android:textStyle="bold"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/best1_profile"
                android:text="15단계 up!" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/best1_profile"
                android:layout_width="180dp"
                android:layout_height="98dp"
                android:layout_centerHorizontal="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/ll_best1_info"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_cumulative_voting_wing_2" />

                <net.ib.mn.view.ExodusImageView
                    android:id="@+id/photo"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="26dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/menu_profile_default2"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_best1_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/icon_new_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="5dp"
                    android:minWidth="15dp"
                    android:minHeight="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_change_ranking_new"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/rank"
                    app:layout_constraintStart_toStartOf="@id/rank"
                    app:layout_constraintTop_toBottomOf="@id/rank" />

                <LinearLayout
                    android:id="@+id/ll_change_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@id/rank"
                    app:layout_constraintEnd_toEndOf="@id/rank"
                    app:layout_constraintStart_toStartOf="@id/rank"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_change_ranking"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@drawable/icon_change_ranking_up" />

                    <TextView
                        android:id="@+id/tv_change_ranking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="18"
                        android:textColor="@color/gray580"
                        android:textSize="9sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/title_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/first_rank"
                    android:textColor="@color/main_light"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/main_light"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:text="다현" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/group"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="1dp"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:textColor="@color/main_light"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="SmallSp"
                    tools:text="TWICE" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/main_light"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="/ 2990점" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="?android:attr/listDivider" />

    </LinearLayout>
</layout>
