<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottom_sheet_live_resolution_filter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray100"
    android:orientation="vertical">

    <View
        android:layout_width="36dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/gray150" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_live_resolution_auto"
        android:layout_width="match_parent"
        android:minHeight="@dimen/bottom_sheet_min_height"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/live_auto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/gray900"
        android:textSize="15sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cb_live_resolution_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dp"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toTopOf="@+id/tv_live_resolution_auto"
        app:layout_constraintEnd_toEndOf="@+id/tv_live_resolution_auto"
        app:layout_constraintStart_toStartOf="@+id/tv_live_resolution_auto"
        app:layout_constraintBottom_toBottomOf="@+id/tv_live_resolution_auto"
        android:src="@drawable/img_streaming_check" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>