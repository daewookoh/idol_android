<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_img_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_count"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/text_default_radius9"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5"
            android:textSize="10sp"
            android:textColor="@color/text_light"
            app:layout_constraintStart_toStartOf="@id/iv_count"
            app:layout_constraintEnd_toEndOf="@id/iv_count"
            app:layout_constraintTop_toTopOf="@id/iv_count"
            app:layout_constraintBottom_toBottomOf="@id/iv_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
