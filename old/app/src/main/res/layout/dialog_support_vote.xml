<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_popup"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="30dp"
        android:paddingBottom="22dp"
        android:text="@string/support_vote"
        android:textColor="@color/main"
        android:textStyle="bold"
        android:textSize="16sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_my_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        android:backgroundTint="@color/background_200">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14sp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_dia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/my_diamonds"
                android:textColor="@color/text_default"
                android:layout_marginTop="14sp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/my_diamond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/main_light"
                tools:text="9996000ê°œ"
                android:layout_marginStart="3dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tv_my_dia"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_diamond1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_background_button_border_round"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cl_diamond5">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_diamond1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_support_vote"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:text="X 1"
                android:textColor="@color/text_default"
                android:textSize="11sp"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText"
                app:layout_constraintStart_toEndOf="@id/iv_diamond1"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_diamond5"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_background_button_border_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cl_diamond1"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_diamond5"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_support_vote"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:text="X 5"
                android:textColor="@color/text_default"
                android:textSize="11sp"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText"
                app:layout_constraintStart_toEndOf="@id/iv_diamond5"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_diamond10"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_background_button_border_round"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_diamond1"
            app:layout_constraintEnd_toStartOf="@id/cl_diamond50">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_diamond10"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_support_vote"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:text="X 10"
                android:textColor="@color/text_default"
                android:textSize="11sp"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText"
                app:layout_constraintStart_toEndOf="@id/iv_diamond10"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_diamond50"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_background_button_border_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cl_diamond10"
            app:layout_constraintTop_toBottomOf="@id/cl_diamond5">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_diamond50"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_support_vote"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:text="X 50"
                android:textColor="@color/text_default"
                android:textSize="11sp"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText"
                app:layout_constraintStart_toEndOf="@id/iv_diamond50"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_diamond100"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_background_button_border_round"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_diamond10"
            app:layout_constraintEnd_toStartOf="@id/cl_diamond_all">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_diamond100"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_support_vote"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:text="X 100"
                android:textColor="@color/text_default"
                android:textSize="11sp"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText"
                app:layout_constraintStart_toEndOf="@id/iv_diamond100"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_diamond_all"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_background_button_border_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cl_diamond100"
            app:layout_constraintTop_toBottomOf="@id/cl_diamond50">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_heart_free_all"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_support_vote"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:text="X ALL"
                android:textColor="@color/text_default"
                android:textSize="11sp"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText"
                app:layout_constraintStart_toEndOf="@id/iv_heart_free_all"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <net.ib.mn.view.ClearableEditText
        android:id="@+id/diamon_count_input"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_background_button_border_round"
        android:digits="0123456789"
        android:gravity="center_vertical"
        android:inputType="number"
        android:maxLength="8"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/main"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray100" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/confirm"
            android:textColor="@color/text_gray"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray100" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/btn_cancel"
            android:textColor="@color/text_gray"
            android:textSize="13sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
