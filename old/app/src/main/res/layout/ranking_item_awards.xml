<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:background="@color/background_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/container_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:minHeight="70dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="70dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="81dp"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/photo_border"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/profile_round_off"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <net.ib.mn.view.ExodusImageView
                        android:id="@+id/photo"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/menu_profile_default2"
                        app:layout_constraintBottom_toBottomOf="@id/photo_border"
                        app:layout_constraintEnd_toEndOf="@id/photo_border"
                        app:layout_constraintStart_toStartOf="@id/photo_border"
                        app:layout_constraintTop_toTopOf="@id/photo_border" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/badgeBirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/icon_anniversary_birth_medium"
                        android:scaleX="@integer/locale_mirror_flip"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/badgeDebut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/icon_anniversary_debut_medium"
                        android:scaleX="@integer/locale_mirror_flip"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/badgeComeback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:background="@drawable/icon_anniversary_comeback_medium"
                        android:scaleX="@integer/locale_mirror_flip"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/badgeMemorialDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/redbar_days"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/text_white_black"
                        android:textSize="7sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/photo_border"
                        app:layout_constraintEnd_toEndOf="@id/photo_border"
                        tools:ignore="SmallSp"
                        tools:text="9999일" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/badgeAllInDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/icon_anniversary_allinday_medium"
                        android:scaleX="@integer/locale_mirror_flip"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_ranking_heart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/rank_index"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1위"
                            android:textColor="@color/text_default"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/text_default"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/group"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="2dp"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/text_default"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <net.ib.mn.view.ProgressBarLayout
                        android:id="@+id/progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingBottom="5dp">

                        <RelativeLayout
                            android:id="@+id/wrapper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:minHeight="17dp">

                            <FrameLayout
                                android:id="@+id/ranking_progress_bar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_alignTop="@id/count_wrapper"
                                android:layout_alignBottom="@id/count_wrapper"
                                android:background="@drawable/progressbar_ranking_awards" />

                            <RelativeLayout
                                android:id="@+id/count_wrapper"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="center_vertical"
                                    android:text="0"
                                    android:textColor="@color/text_white_black"
                                    android:textSize="11sp" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </net.ib.mn.view.ProgressBarLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_heart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:src="@drawable/btn_ranking_vote_heart" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>
</layout>

