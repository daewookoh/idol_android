<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_100">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/guide_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="30dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/fix_gray1000"
                android:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_award_main"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="360:240"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_heart_dream_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="17dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        app:layout_constraintTop_toBottomOf="@id/img_award_main"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/tv_award_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lable_get_info"
                            tools:text="2022 하트드림 어워즈"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/fix_white"
                            android:textAlignment="center"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_awards_instruction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:textSize="12sp"
                            android:textColor="@color/fix_white"
                            tools:text="Kpop 아티스트에게 사랑을 전하는\n 제 1회 하트드림 어워즈가 열립니다. \n\n 어쩌구저쩌구 인기상 투표~~~ \n 8/25일 사랑하는 아티스트에게 트로피를 안겨주세요! "
                            android:textAlignment="center"
                            app:layout_constraintTop_toBottomOf="@id/tv_award_title" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_title_award_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/award_guide_sub1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/award_guide_desc1"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_award_calendar" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp">

                    <TextView
                        android:id="@+id/tv_title_award_vote_period"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/award_guide_sub2"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_awards_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:text="@string/lable_get_info"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_award_vote_period" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp">

                    <TextView
                        android:id="@+id/tv_title_award_vote_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/award_guide_sub3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_award_vote_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lable_get_info"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_award_vote_work" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp">

                    <TextView
                        android:id="@+id/tv_title_award_voting_way"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/award_guide_sub4"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_award_voting_way"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lable_get_info"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_award_voting_way" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp">

                    <TextView
                        android:id="@+id/tv_title_award_notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/award_guide_sub5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_award_notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lable_get_info"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_award_notice" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp">

                    <TextView
                        android:id="@+id/tv_title_award_rules"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/award_guide_sub6"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_award_rules"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lable_get_info"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/fix_white"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_award_rules" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
