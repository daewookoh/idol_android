<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_100">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/itemImg"
            android:layout_width="46dp"
            android:layout_height="38dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/img_heart_1800"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/heartCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:textAlignment="viewStart"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="24sp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toEndOf="@id/itemImg"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1800[+360]" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/heartCount2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAlignment="viewStart"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="24sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toEndOf="@+id/itemImg"
            app:layout_constraintTop_toBottomOf="@+id/heartCount"
            tools:text="24000 데일리 하트" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/heartCountInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="6dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/price"
           >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bonus"
                android:src="@drawable/img_shop_bonus"
                android:layout_gravity="top"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/heartCountDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeTextType="uniform"
                    tools:text="에버하트[+데일리하트]" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/heartCountDesc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeTextType="uniform"
                    tools:text ="다이아 1"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bonusPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                tools:text="+11% Bonus"
                android:visibility="gone"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/prior_price_li"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/price"
            app:layout_constraintTop_toTopOf="@+id/price"
            app:layout_constraintBottom_toBottomOf="@id/price"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/prior_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="17sp"
                android:textColor="@color/text_dimmed"
                android:textSize="12sp"
                tools:text="￦1200"
              />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_store_arrow" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_price_inactive"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="17sp"
            android:textAlignment="center"
            android:textColor="@color/main_light"
            android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toTopOf="@id/heartCountInfo"
            app:layout_constraintStart_toStartOf="@+id/heartCount2"
            app:layout_constraintTop_toBottomOf="@+id/heartCount2"
            app:layout_constraintEnd_toStartOf="@+id/prior_price_li"
            tools:text="￦1200" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/gray100"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.appcompat.widget.LinearLayoutCompat>
