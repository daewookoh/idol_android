<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray50">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_100"
            android:paddingStart="24dp"
            android:paddingTop="10dp"
            android:paddingEnd="24dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <net.ib.mn.view.ExodusImageView
                android:id="@+id/eiv_attendance_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/menu_profile_default2"
                app:layout_constraintBottom_toBottomOf="@id/tv_attendance_days_with"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_attendance_username" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_attendance_level"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_level_0"
                app:layout_constraintBottom_toBottomOf="@+id/tv_attendance_username"
                app:layout_constraintStart_toEndOf="@+id/eiv_attendance_photo"
                app:layout_constraintTop_toTopOf="@+id/tv_attendance_username"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_attendance_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textColor="@color/text_default"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/tv_attendance_start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/iv_attendance_level"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="필마이리듬" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_attendance_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/text_dimmed"
                android:textSize="13sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/tv_attendance_days_with"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/iv_attendance_level"
                app:layout_constraintTop_toBottomOf="@+id/tv_attendance_username"
                tools:text="2021.04.07 부터" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_attendance_days_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:text="@string/attendance_with"
                android:textAlignment="viewStart"
                android:textColor="@color/text_gray"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/iv_attendance_level"
                app:layout_constraintTop_toBottomOf="@+id/tv_attendance_start"
                tools:text="최애돌과 함께한지" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/attendance_push"
            layout="@layout/view_incite_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/cl_user_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <include
            android:id="@+id/attendance_graph"
            layout="@layout/attendance_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/attendance_push"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
