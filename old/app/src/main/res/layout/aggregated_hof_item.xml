<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_agg_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_100"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_icon_up"
            android:layout_width="30dp"
            android:layout_height="23dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/tv_increase_step"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow_go"
            app:layout_constraintStart_toStartOf="@id/tv_increase_step"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:srcCompat="@drawable/icon_up" />

        <ImageView
            android:id="@+id/iv_arrow_go"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_go"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_increase_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:textColor="@color/main_light"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow_go"
            tools:text="15단계 up!" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_ranking"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/icon_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rank"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_rating_heart_voting_1st"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/rank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="1위"
                android:textColor="@color/text_default"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon_ranking" />

            <ImageView
                android:id="@+id/icon_new_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="15dp"
                android:minHeight="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_change_ranking_new"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/rank"
                app:layout_constraintStart_toStartOf="@id/rank"
                app:layout_constraintTop_toBottomOf="@id/rank" />

            <LinearLayout
                android:id="@+id/ll_change_ranking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/rank"
                app:layout_constraintStart_toStartOf="@id/rank"
                app:layout_constraintTop_toBottomOf="@id/rank">

                <ImageView
                    android:id="@+id/icon_change_ranking"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/icon_change_ranking_up" />

                <TextView
                    android:id="@+id/tv_change_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="18"
                    android:textColor="@color/text_default"
                    android:textSize="9sp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <net.ib.mn.view.ExodusImageView
            android:id="@+id/photo"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_profile_default2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cl_name"
            app:layout_constraintStart_toEndOf="@+id/container_ranking"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/photo"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_default"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/score"
                app:layout_constraintEnd_toStartOf="@+id/group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="다현" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:textColor="@color/text_dimmed"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/name"
                app:layout_constraintStart_toEndOf="@+id/name"
                app:layout_constraintTop_toTopOf="@+id/name"
                tools:ignore="SmallSp"
                tools:text="TWICE" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="450점"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="@color/gray200"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/score"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/score"
                tools:text="2024. 3. 14" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
