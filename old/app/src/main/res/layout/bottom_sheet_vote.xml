<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_reward_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:paddingTop="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_pop_up_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_popup_top"
            app:layout_constraintBottom_toTopOf="@+id/cl_reward"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_image_center" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_review"
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:background="@android:color/transparent"
            android:src="@drawable/img_popup_post_vote"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_image_center"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@id/img_review"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_review" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cl_reward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_popup_start_end"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_review">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vote_heart_title"
                android:textAlignment="center"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_chat"
                android:textSize="22sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="24dp"
                    android:textColor="@color/main"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_heart"
                    app:layout_constraintTop_toTopOf="@id/tv_heart"
                    app:layout_constraintBottom_toBottomOf="@id/tv_heart"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="100"
                    android:textSize="24dp"
                    android:textColor="@color/main"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:scaleX="@integer/locale_mirror_flip"
                    android:includeFontPadding="false"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/tv_plus"
                    app:layout_constraintEnd_toStartOf="@id/iv_heart"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="21dp"
                    android:layout_height="17dp"
                    android:src="@drawable/img_popup_heart"
                    android:layout_marginStart="2dp"
                    app:layout_constraintTop_toTopOf="@id/tv_heart"
                    app:layout_constraintBottom_toBottomOf="@id/tv_heart"
                    app:layout_constraintStart_toEndOf="@id/tv_heart"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:text="@string/response_v1_articles_give_heart"
                android:textColor="@color/text_dimmed"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/red_bg_round_radius_28"
                android:gravity="center"
                android:text="@string/vote_certificate_popup_button"
                android:textColor="@color/text_white_black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_popup_start_end" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_close"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:padding="25dp"
            android:src="@drawable/btn_popup_close"
            android:backgroundTint="#333"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_pop_up_top"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
