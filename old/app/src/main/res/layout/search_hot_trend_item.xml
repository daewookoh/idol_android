<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_hot_trend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@drawable/border_gray100_1px">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_hot_num"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:text="1"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/main_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_hot_trend"
            app:layout_constraintBottom_toBottomOf="@id/tv_hot_trend"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_hot_trend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="bts"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textColor="@color/text_gray"
            android:paddingStart="17dp"
            app:layout_constraintStart_toEndOf="@id/tv_hot_num"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>