<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>

	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/background_100">

		<RelativeLayout
			android:id="@+id/awards_main"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/btn_group">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/awards_guide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/awards_ranking_guide"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/awards_aggregated"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone">

				<RelativeLayout
					android:id="@+id/awards_ranking_aggregated"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent" />

			</androidx.constraintlayout.widget.ConstraintLayout>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/awards_realtime"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="visible">

				<RelativeLayout
					android:id="@+id/awards_ranking_realtime"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent" />

			</androidx.constraintlayout.widget.ConstraintLayout>

		</RelativeLayout>

		<LinearLayout
			android:id="@+id/btn_group"
			android:layout_width="match_parent"
			android:minHeight="48dp"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:orientation="horizontal"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/awards_main"
			android:weightSum="3">

            <Button
                android:id="@+id/tabbtn_guide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_up_two_tab"
                android:text="@string/award_guide"
                android:textColor="@color/text_dimmed"
                android:textSize="15dp"
                tools:ignore="SpUsage" />

			<Button
				android:id="@+id/tabbtn_aggregated"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/btn_up_two_tab"
				android:text="@string/aggregation"
				android:textColor="@color/text_dimmed"
				android:textSize="15dp"
                tools:ignore="SpUsage" />

			<Button
				android:id="@+id/tabbtn_realtime"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/btn_up_two_tab"
				android:text="@string/award_realtime"
				android:textColor="@color/main"
				android:textSize="15dp"
                tools:ignore="SpUsage" />
		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>

