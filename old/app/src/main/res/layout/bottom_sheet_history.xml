<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_history_arrow_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/btn_arrow_down_nor"/>
    <ImageView
        android:id="@+id/img_history"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/img_history_arrow_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_history_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="http::~~~~~~http::~~~~~~http::~~~~~~http::~~~~~~http::~~~~~~http::~~~~~~http::~~~~~~"
        android:textSize="12sp"
        android:textColor="@color/text_light_blue"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/img_history"
        app:layout_constraintEnd_toEndOf="@id/img_history"
        app:layout_constraintTop_toBottomOf="@id/img_history"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>