<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/cl_container"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg_background200_radius20"
                android:paddingHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="58dp"
                    android:gravity="center"
                    android:text="@string/video_ad_timer_title"
                    android:textColor="@color/text_default"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="@string/video_ad_timer_body"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_video_ad_timer"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/main200_radius15"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_subtitle">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/video_ad_timer_time"
                        android:textColor="@color/main_light"
                        android:textSize="13dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_video_timer_remain_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/main"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        tools:text="00:00:00" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/view_space"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_video_ad_timer" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_tool_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_space"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_tooltip_down"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="-2dp"
                        android:src="@drawable/bg_guide_down"
                        android:tint="#333333"
                        app:layout_constraintEnd_toEndOf="@+id/tv_tooltip_down"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_tooltip_down" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_tooltip_down"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:background="@drawable/bg_radius8_tooltip"
                        android:backgroundTint="#333333"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:textColor="@android:color/white"
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@string/video_ad_timer_bonus" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/main_radius15"
                    android:text="@string/confirm"
                    android:textColor="@color/text_white_black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_tool_tip" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_notification"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_ok">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_notification_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        app:srcCompat="@drawable/icon_notify_default" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/video_ad_timer_alert"
                        android:textAlignment="center"
                        android:textColor="@color/text_gray"
                        android:textSize="13dp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_notification" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_icon"
                android:layout_width="304dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_videoad_waiting" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
