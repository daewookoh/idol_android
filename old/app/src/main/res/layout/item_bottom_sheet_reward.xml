<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="쏘리하트"
                android:textSize="22dp"
                android:textColor="@color/text_chat"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_reward"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="+"
                    android:textSize="24dp"
                    android:textColor="@color/main"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_heart"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="100"
                    android:textSize="24dp"
                    android:textColor="@color/main"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:scaleX="@integer/locale_mirror_flip"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/tv_plus"
                    app:layout_constraintEnd_toStartOf="@id/iv_heart"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="21dp"
                    android:layout_height="17dp"
                    android:src="@drawable/img_popup_heart"
                    android:layout_marginStart="2dp"
                    app:layout_constraintTop_toTopOf="@id/tv_heart"
                    app:layout_constraintBottom_toBottomOf="@id/tv_heart"
                    app:layout_constraintStart_toEndOf="@id/tv_heart"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_reward_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="하트 300개가 투표되었습니다."
                android:textSize="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="60dp"
                android:paddingEnd="60dp"
                android:visibility="gone"
                android:textColor="@color/text_dimmed"
                app:layout_constraintTop_toBottomOf="@id/cl_heart"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
