<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data></data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray80"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_border_top">

                <include
                    android:id="@+id/chat_toolbar"
                    layout="@layout/chat_toolbar" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/footer_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_400"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/messageViewWrapper_chat"
                    app:layout_constraintBottom_toTopOf="@+id/rl_emoticon">

                    <include
                        android:id="@+id/view_comment"
                        layout="@layout/view_comment" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rl_emoticon"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/footer_chat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <include
                        android:id="@+id/view_emoticon"
                        layout="@layout/view_emoticon" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <RelativeLayout
                    android:id="@+id/messageViewWrapper_chat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/footer_chat"
                    app:layout_constraintTop_toBottomOf="@+id/chat_toolbar">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/messageRcyContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/description_view_chat"
                        android:background="@drawable/gray_border_bottom"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/messageView_chat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/background_400"
                            android:scrollbarStyle="outsideOverlay"
                            android:scrollbars="vertical"
                            android:clipToPadding="false"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@android:id/empty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:text="@string/lable_get_info"
                            android:textAlignment="gravity"
                            android:textColor="@color/gray200"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/description_view_chat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:background="@color/gray80"
                        android:gravity="center"
                        android:paddingStart="30dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="15dp"
                        android:textColor="@color/gray580"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/scrollToBottomBtnWrapper_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/footer_chat"
                    android:paddingStart="15dp"
                    android:visibility="gone"
                    tools:ignore="RtlSymmetry">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/scrollToBottomBtn_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="13dp"
                        android:background="@drawable/bg_btn_scroll_to_bottom"
                        android:contentDescription="scrollToBottomButton" />

                    <!-- dummy textview for align with new_message_toast-->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="dummy"
                        android:textColor="@color/text_white_black"
                        android:textSize="25sp"
                        android:visibility="invisible" />

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#80000000"
                    android:visibility="gone"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/footer_chat"
                    tools:ignore="RtlSymmetry">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_preview_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="18dp"
                        android:src="@drawable/btn_close_w"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_preview"
                        android:layout_width="136dp"
                        android:layout_height="136dp"
                        android:src="@drawable/img_emoticon_1_basicface_on"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/newMessageWrapper_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/footer_chat"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_toast_new_message"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/footer_chat"
                    tools:ignore="RtlSymmetry">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/newMessageProfileImg_chat"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintWidth_percent="0.15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/newMessage_ll_container_chat"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="gone"
                        tools:srcCompat="@drawable/menu_profile_1" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/newMessageBtn_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="13dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/btn_scroll_to_bottom" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/newMessage_ll_container_chat"
                        android:layout_width="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/newMessageBtn_chat"
                        app:layout_constraintStart_toEndOf="@+id/newMessageProfileImg_chat"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_toStartOf="@id/newMessageBtn_chat"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/newMessageNickname_chat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_light"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="nickname" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/newMessage_chat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:textAlignment="viewStart"
                            android:maxLines="1"
                            android:textColor="@color/text_light"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:text="blah blah blah" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_language_wrapper_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/footer_chat"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/gray_border_background_round"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_language_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:textColor="@color/gray580"
                        android:textSize="11sp"
                        tools:ignore="SmallSp"
                        tools:text="한국어" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_schedule_language" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu_screen_chat"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_menu_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_100"
                android:orientation="vertical">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 7dp: 메인 툴바와 패딩 맞춤 -->
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar_menu_chat"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:paddingEnd="7dp"
                        android:paddingStart="0dp"
                        android:background="@color/navigation_bar"
                        android:theme="@style/ToolBarStyle"
                        app:contentInsetStartWithNavigation="0dp" />

                </com.google.android.material.appbar.AppBarLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/drawer_menu_chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
