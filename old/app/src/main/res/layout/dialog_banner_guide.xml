<?xml version="1.0" encoding="utf-8"?>
<!-- 이붙그램 뷰어 시작시 가이드 화면 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/background_100"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/bg_bannergram"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@string/bannergram_guide_landscape"
        android:textAlignment="center"
        android:textColor="@color/gray900"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_do_not_show_again"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_red_border_round"
            android:text="@string/lable_do_not_read"
            android:textColor="@color/main"
            android:textScaleX="0.9"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn"
            android:text="@string/confirm"
            android:textColor="@color/background_100"
            android:textScaleX="0.9"
            android:textSize="15sp"/>

    </LinearLayout>

</LinearLayout>
