<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:maxHeight="10dp"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/background_100">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/container_ranking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="81dp"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/photo_border"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/profile_round_off"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <net.ib.mn.view.ExodusImageView
                    android:id="@+id/photo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/menu_profile_default2"
                    app:layout_constraintBottom_toBottomOf="@id/photo_border"
                    app:layout_constraintEnd_toEndOf="@id/photo_border"
                    app:layout_constraintStart_toStartOf="@id/photo_border"
                    app:layout_constraintTop_toTopOf="@id/photo_border" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/badgeBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/icon_anniversary_birth_medium"
                    android:scaleX="@integer/locale_mirror_flip"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/badgeDebut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/icon_anniversary_debut_medium"
                    android:scaleX="@integer/locale_mirror_flip"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/badgeComeback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/icon_anniversary_comeback_medium"
                    android:scaleX="@integer/locale_mirror_flip"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/badgeMemorialDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redbar_days"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/text_white_black"
                    android:textSize="7sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/photo_border"
                    app:layout_constraintEnd_toEndOf="@id/photo_border"
                    tools:ignore="SmallSp"
                    tools:text="9999일" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/badgeAllInDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/icon_anniversary_allinday_medium"
                    android:scaleX="@integer/locale_mirror_flip"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_ranking_heart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                tools:layout_editor_absoluteX="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/rank_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@id/progress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/gray1000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="아이유" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/group"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:textColor="@color/gray300"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:text="그룹명" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <FrameLayout
                    android:id="@+id/progress_bar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleX="@integer/locale_mirror_flip"
                    android:background="@drawable/progressbar_ranking"
                    app:layout_constraintBottom_toBottomOf="@id/progress"
                    app:layout_constraintEnd_toEndOf="@id/progress"
                    app:layout_constraintStart_toStartOf="@id/progress"
                    app:layout_constraintTop_toTopOf="@id/progress" />

                <net.ib.mn.view.ProgressBarLayout
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="4dp"
                    android:minHeight="17dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rank_container">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/text_white_black"
                        android:textSize="11sp"
                        tools:text="0" />

                </net.ib.mn.view.ProgressBarLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rank_container"
                    app:layout_constraintVertical_bias="0">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/image_angel"
                            android:layout_width="13dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="3dp"
                            android:background="@drawable/charity_angel_badge"
                            android:paddingTop="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/text_angel"
                            android:textSize="7dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/image_fairy"
                            android:layout_width="13dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="3dp"
                            android:layout_toEndOf="@+id/image_angel"
                            android:background="@drawable/charity_fairy_badge"
                            android:paddingTop="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/text_fairy"
                            android:textSize="7dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/image_miracle"
                            android:layout_width="13dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="3dp"
                            android:layout_toEndOf="@+id/image_fairy"
                            android:background="@drawable/charity_miracle_badge"
                            android:paddingTop="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/text_miracle"
                            android:textSize="7dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/image_rookie"
                            android:layout_width="13dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="3dp"
                            android:layout_toEndOf="@+id/image_miracle"
                            android:background="@drawable/charity_rookie_badge"
                            android:paddingTop="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/text_rookie"
                            android:textSize="7dp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/image_super_rookie"
                            android:layout_width="13dp"
                            android:layout_height="16dp"
                            android:layout_toEndOf="@+id/image_rookie"
                            android:background="@drawable/charity_super_rookie_badge"
                            android:paddingTop="4dp"
                            android:text="S"
                            android:textAlignment="center"
                            android:textColor="@color/text_super_rookie"
                            android:textSize="7dp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:visibility="visible" />
                    </RelativeLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/btn_most"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/btn_most"
            android:gravity="center"
            app:buttonCompat="@android:color/transparent" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/btn_favorite"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/btn_favorite"
            app:buttonCompat="@android:color/transparent" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>
