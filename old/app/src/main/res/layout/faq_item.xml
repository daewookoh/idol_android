<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_200"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:minHeight="52dp"
        android:layout_height="wrap_content"
        android:background="@color/background_200"
        android:orientation="horizontal"
        android:paddingBottom="0.5dp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/inquiry_qna"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:minHeight="14dp"
            android:scaleType="fitXY"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:paddingTop="3dp"
            android:src="@drawable/icon_inquiry_qna_q"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="test"
            android:textColor="@color/text_default"
            android:textSize="13.5sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/icon"
            app:layout_constraintStart_toEndOf="@id/inquiry_qna"
            app:layout_constraintTop_toTopOf="@id/inquiry_qna" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_go"
            android:background="@color/background_200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/faq_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/more_faq"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        android:paddingTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_faq"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg_radius_brand500"
        android:text="@string/setting_menu02"
        android:textColor="@color/text_white_black"
        app:layout_constraintTop_toBottomOf="@id/faq_more"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>
