<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_popup"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="7sp"
            android:text="@string/title_vote_heart"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:textSize="16sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_solo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_default"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/tv_group"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="슬기" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@color/text_dimmed"
                android:textSize="10sp"
                android:visibility="visible"
                android:gravity="center"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/tv_solo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_solo"
                tools:text="레드벨벳"
                tools:ignore="SmallSp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            android:backgroundTint="@color/background_200">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14sp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_my_heart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_heart"
                    android:textSize="12sp"
                    android:textColor="@color/text_default"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/heart_count_myheart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="353,353"
                    android:textSize="18sp"
                    android:textColor="@color/main_light"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_my_heart" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_ever_heart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/heart_count_myheart"
                    app:layout_constraintEnd_toStartOf="@id/tv_plus">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_ever_heart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ever_heart"
                        android:textSize="12sp"
                        android:textColor="@color/text_dimmed"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/heart_count_everheart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="350,000"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_ever_heart" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/text_dimmed"
                    app:layout_constraintStart_toEndOf="@id/cl_ever_heart"
                    app:layout_constraintEnd_toStartOf="@id/cl_daily_heart"
                    app:layout_constraintTop_toTopOf="@id/cl_ever_heart"
                    app:layout_constraintBottom_toBottomOf="@id/cl_ever_heart" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_daily_heart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/heart_count_myheart"
                    app:layout_constraintStart_toEndOf="@id/tv_plus">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_weak_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weak_heart"
                        android:textSize="12sp"
                        android:textColor="@color/text_dimmed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/heart_count_weak_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="350,000"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_weak_heart" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_heart1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_background_button_border_round"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cl_heart10">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_heart1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/icon_heart_vote"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="X 1"
                    android:textColor="@color/text_default"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    tools:ignore="HardcodedText"
                    app:layout_constraintStart_toEndOf="@id/iv_heart1"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_heart10"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_background_button_border_round"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cl_heart1"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_heart10"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/icon_heart_vote"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="X 10"
                    android:textColor="@color/text_default"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    tools:ignore="HardcodedText"
                    app:layout_constraintStart_toEndOf="@id/iv_heart10"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_heart50"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_background_button_border_round"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_heart1"
                app:layout_constraintEnd_toStartOf="@id/cl_heart100">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_heart50"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/icon_heart_vote"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="X 50"
                    android:textColor="@color/text_default"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    tools:ignore="HardcodedText"
                    app:layout_constraintStart_toEndOf="@id/iv_heart50"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_heart100"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_background_button_border_round"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cl_heart50"
                app:layout_constraintTop_toBottomOf="@id/cl_heart10">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_heart100"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/icon_heart_vote"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="X 100"
                    android:textColor="@color/text_default"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    tools:ignore="HardcodedText"
                    app:layout_constraintStart_toEndOf="@id/iv_heart100"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_heart_all"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_background_button_border_round"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_heart50"
                app:layout_constraintEnd_toStartOf="@id/cl_heart_free_all">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_heart_all"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/icon_heart_vote"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="X ALL"
                    android:textColor="@color/text_default"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    tools:ignore="HardcodedText"
                    app:layout_constraintStart_toEndOf="@id/iv_heart_all"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_heart_free_all"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_background_button_border_round"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cl_heart_all"
                app:layout_constraintTop_toBottomOf="@id/cl_heart100">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_heart_free_all"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/icon_heart_vote"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="@string/X_DAILY_ALL"
                    android:textColor="@color/text_default"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    tools:ignore="HardcodedText"
                    app:layout_constraintStart_toEndOf="@id/iv_heart_free_all"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <net.ib.mn.view.ClearableEditText
            android:id="@+id/heart_count"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_background_button_border_round"
            android:digits="0123456789"
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLength="9"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/main"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray100" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/confirm"
                android:textColor="@color/text_gray"
                android:textSize="13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray100" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/btn_cancel"
                android:textColor="@color/text_gray"
                android:textSize="13sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
