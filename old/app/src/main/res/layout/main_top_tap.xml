<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="2dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NEW"
            android:textColor="@color/main"
            android:textSize="8dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:padding="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            tools:ignore="HardcodedText,SpUsage"
            tools:visibility="visible"
            tools:text="NEW" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dimmed"
            android:textSize="14dp"
            android:padding="0dp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage"
            tools:text="여자개인" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_tutorial_ranking_tab"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/cl_root"
            app:layout_constraintEnd_toEndOf="@+id/cl_root"
            app:layout_constraintStart_toStartOf="@+id/cl_root"
            app:layout_constraintTop_toTopOf="@+id/cl_root"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
