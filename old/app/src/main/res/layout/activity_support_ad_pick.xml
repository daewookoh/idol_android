<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_support_ad_pick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_100"
        tools:context=".support.SupportAdPickActivity">

        <HorizontalScrollView
            android:id="@+id/sv_tag"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/background_100"
            android:fillViewport="true"
            android:paddingTop="12dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_all_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_support_all_tag"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/all"
                    android:textColor="@drawable/color_support_tag_text"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:background="@color/main" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_domestic_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_support_tag"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/adtype_korean"
                    android:textColor="@drawable/color_support_tag_text"
                    android:textSize="12sp"
                    tools:background="@color/main" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_foreign_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_support_tag"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/adtype_global"
                    android:textColor="@drawable/color_support_tag_text"
                    android:textSize="12sp"
                    tools:background="@color/main" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_mobile_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_support_tag"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/adtype_mobile"
                    android:textColor="@drawable/color_support_tag_text"
                    android:textSize="12sp"
                    tools:background="@color/main" />

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/layout_support_ad_pick_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_tag">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_ad_type_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="@string/label_select_ad"
                    android:textColor="@color/gray1000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/support_ad_pick_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:scrollbars="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_support_ad_pick" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@id/v_shadow"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:background="@drawable/bg_shadow_top_gray1000_opa15"
            app:layout_constraintBottom_toTopOf="@id/layout_support_ad_pick_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_support_ad_pick_btn"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:background="@color/background_200"
            android:paddingHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/support_ad_pick_btn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_gray"
                android:enabled="false"
                android:text="@string/label_button_select"
                android:textColor="@color/text_white_black"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
