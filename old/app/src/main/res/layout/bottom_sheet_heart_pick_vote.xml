<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_reward_root"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_popup_vote"
            app:layout_constraintBottom_toTopOf="@+id/cl_reward"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_review_dia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/img_attendance_reward_dia"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/cl_reward"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_pop_up_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_popup_top"
            app:layout_constraintBottom_toTopOf="@+id/cl_reward"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_close"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:padding="25dp"
            android:src="@drawable/btn_popup_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_pop_up_top" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cl_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_popup_start_end"
            android:orientation="vertical"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/img_review">

            <include
                android:id="@+id/in_reward_section"
                layout="@layout/item_bottom_sheet_reward"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="리사_블랙핑크"
                    android:textColor="@color/text_chat"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    tools:text="@string/msg_heartpick_vote_result"
                    android:textColor="@color/text_dimmed"
                    android:textSize="14sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="26dp"
                android:paddingBottom="38dp"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                app:layout_constraintTop_toBottomOf="@id/reward3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="@string/label_share"
                    android:textColor="@color/text_white_black"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/red_bg_round_radius_28"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>





