<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/emoticon_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray150"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_emoticon"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emoticon_divider1"/>

    <View
        android:id="@+id/emoticon_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray150"
        app:layout_constraintTop_toBottomOf="@id/rv_chat_emoticon"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_chat_emoticon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/emoticon_divider2"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
