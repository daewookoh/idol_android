<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="9dp"
        android:background="@color/background_100">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/menu_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_myinfo_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/account_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- inapp ad -->
                    <androidx.compose.ui.platform.ComposeView
                        android:id="@+id/cv_in_app_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:visibility="gone"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_subscription_badge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_subscription_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_daily_badge"
                                    android:textColor="@color/text_white_black"
                                    android:textSize="10sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:ignore="SmallSp" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_myinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cl_subscription_badge"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="65dp"
                                android:layout_marginTop="10dp">

                                <RelativeLayout
                                    android:id="@+id/btn_photo_upload"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <net.ib.mn.view.ExodusImageView
                                        android:id="@+id/photo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/menu_profile_default2" />

                                </RelativeLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_feed_new"
                                    android:layout_width="13dp"
                                    android:layout_height="13dp"
                                    android:src="@drawable/icon_menu_new_default"
                                    android:tint="@color/main"
                                    android:visibility="gone"
                                    app:layout_constraintRight_toRightOf="@id/btn_photo_upload"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_account_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:orientation="horizontal"
                                    app:layout_constrainedHeight="false"
                                    app:layout_constrainedWidth="true"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0"
                                    app:layout_constraintHorizontal_chainStyle="packed"
                                    app:layout_constraintHorizontal_weight="1"
                                    app:layout_constraintStart_toEndOf="@id/btn_photo_upload"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <View
                                        android:id="@+id/top_guide"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/level"
                                        android:layout_width="wrap_content"
                                        android:layout_height="15dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="0"
                                        android:background="@android:color/transparent"
                                        android:contentDescription="@string/level"
                                        android:padding="0dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/icon_level_0"
                                        app:layout_constraintBottom_toBottomOf="@id/name"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="@id/name" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/all_level"
                                        android:layout_width="wrap_content"
                                        android:layout_height="15dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="0"
                                        android:background="@android:color/transparent"
                                        android:contentDescription="@string/level"
                                        android:padding="0dp"
                                        android:scaleType="fitXY"
                                        tools:src="@drawable/allinbadge_level_icon"
                                        app:layout_constraintBottom_toBottomOf="@id/favorite"
                                        app:layout_constraintStart_toStartOf="@id/level"
                                        app:layout_constraintTop_toTopOf="@id/favorite" />

                                    <RelativeLayout
                                        android:id="@+id/rl_progress_wrapper"
                                        android:layout_width="wrap_content"
                                        android:layout_height="10dp"
                                        android:layout_marginTop="0dp"
                                        android:background="@color/main"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/favorite"
                                        app:layout_constraintWidth_max="160dp">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:layout_marginStart="1px"
                                            android:layout_marginTop="1px"
                                            android:layout_marginEnd="1px"
                                            android:layout_marginBottom="1px"
                                            android:background="@color/background_100">

                                            <net.ib.mn.utils.InvertedTextProgressbar
                                                android:id="@+id/level_progress"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:src="@drawable/background_red" />

                                        </RelativeLayout>

                                    </RelativeLayout>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/favorite"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="16dp"
                                        android:hint="@string/none"
                                        android:textAlignment="viewStart"
                                        android:textColor="@color/text_default"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        app:layout_constrainedWidth="true"
                                        app:layout_constraintBottom_toTopOf="@+id/rl_progress_wrapper"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0"
                                        app:layout_constraintHorizontal_chainStyle="packed"
                                        app:layout_constraintHorizontal_weight="1"
                                        app:layout_constraintStart_toStartOf="@id/name"
                                        app:layout_constraintTop_toBottomOf="@id/name"
                                        tools:text="SHin htesune sinshw" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/level_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:gravity="center"
                                        android:paddingBottom="1dp"
                                        android:textColor="@color/main"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toTopOf="@id/rl_progress_wrapper"
                                        app:layout_constraintStart_toStartOf="@id/rl_progress_wrapper"
                                        tools:ignore="SmallSp"
                                        tools:text="LV.23" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/level_up_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:gravity="center"
                                        android:paddingBottom="1dp"
                                        android:textColor="@color/main"
                                        android:textSize="8sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toTopOf="@id/rl_progress_wrapper"
                                        app:layout_constraintEnd_toEndOf="@id/rl_progress_wrapper"
                                        tools:ignore="SmallSp"
                                        tools:text="" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="6dp"
                                        android:layout_marginBottom="5dp"
                                        android:textAlignment="viewStart"
                                        android:textColor="@color/text_default"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        app:layout_constrainedHeight="false"
                                        app:layout_constrainedWidth="true"
                                        app:layout_constraintBottom_toTopOf="@+id/favorite"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.0"
                                        app:layout_constraintStart_toEndOf="@id/level"
                                        app:layout_constraintTop_toTopOf="@id/top_guide"
                                        app:layout_constraintVertical_weight="1"
                                        tools:text="저 은하수를 올려다보며" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </RelativeLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/cv_menu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/account_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
