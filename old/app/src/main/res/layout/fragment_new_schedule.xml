<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray80">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gray_border_bottom_background"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:src="@drawable/schedule_more2"
                    app:layout_constraintBottom_toBottomOf="@id/yearWrapper"
                    app:layout_constraintEnd_toStartOf="@id/yearWrapper"
                    app:layout_constraintTop_toTopOf="@id/yearWrapper"
                    tools:ignore="RtlHardcoded" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/yearWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray580"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray580"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:src="@drawable/schedule_more"
                    app:layout_constraintBottom_toBottomOf="@id/yearWrapper"
                    app:layout_constraintStart_toEndOf="@id/yearWrapper"
                    app:layout_constraintTop_toTopOf="@id/yearWrapper"
                    tools:ignore="RtlHardcoded" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/language_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/gray_border_background_round"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:textColor="@color/gray580"
                        android:textSize="11sp"
                        tools:ignore="SmallSp"
                        tools:text="한국어" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_schedule_language" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/gray_border_bottom_background"
                android:weightSum="7">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sunday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/main"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    tools:text="일" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/monday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray580"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    tools:text="월" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tuesday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray580"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    tools:text="화" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/wednesday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray580"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    tools:text="수" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/thursday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray580"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    tools:text="목" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/friday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray580"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    tools:text="금" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/saturday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray300"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    tools:text="토" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <net.ib.mn.view.ExpandableHeightGridView
                android:id="@+id/day_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_border_bottom"
                android:isScrollContainer="false"
                android:listSelector="@color/text_white_black"
                android:numColumns="7" />

            <net.ib.mn.view.ExpandableHeightGridView
                android:id="@+id/schedule_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray50"
                android:isScrollContainer="false"
                android:listSelector="@color/text_white_black"
                android:numColumns="1"
                android:paddingBottom="100dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/empty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/gray50"
                android:gravity="center"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="@string/schedule_empty" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>