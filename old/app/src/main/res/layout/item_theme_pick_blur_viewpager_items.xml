<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_theme_pick_rank"
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_blur"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:scaleType="fitXY"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_theme_pick_inner_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ib_theme_pick_inner_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/themepick_selected_button_toggle"
        android:visibility="visible"
        android:elevation="2dp"
        app:layout_constraintStart_toEndOf="@+id/cv_theme_pick_rank"
        app:layout_constraintTop_toTopOf="@+id/cv_theme_pick_rank" />

</androidx.constraintlayout.widget.ConstraintLayout>