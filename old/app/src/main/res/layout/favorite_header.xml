<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/empty_favorite_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="182dp"
            android:orientation="vertical"
            android:paddingTop="14dp"
            android:paddingBottom="22dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/img_favorite_idol"/>

            <TextView
                android:id="@+id/tv_favorite_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/desc_empty_favorite1"
                android:textColor="@color/text_default"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_favorite_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7.5dp"
                android:gravity="center"
                android:text="@string/desc_empty_favorite2"
                android:textColor="@color/text_gray"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/btn_favorite_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:background="@drawable/bg_radius50_gray100"
                android:text="@string/desc_empty_favorite3"
                android:textColor="@color/text_default"
                android:textSize="12sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nonempty_favorite_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/rl_photo_wrapper1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/rl_photo_wrapper2"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.media3.ui.PlayerView
                        android:id="@+id/header_playerview1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_alignTop="@+id/photo1"
                        android:layout_alignBottom="@+id/photo1"
                        app:resize_mode="fill"
                        app:surface_type="texture_view"
                        android:visibility="gone"/>

                    <net.ib.mn.view.ExodusImageView
                        android:id="@+id/photo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        app:fixedAlong="width"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_photo_wrapper2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/rl_photo_wrapper1"
                    app:layout_constraintRight_toLeftOf="@id/rl_photo_wrapper3"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.media3.ui.PlayerView
                        android:id="@+id/header_playerview2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_alignTop="@+id/photo2"
                        android:layout_alignBottom="@+id/photo2"
                        app:resize_mode="fill"
                        app:surface_type="texture_view"
                        android:visibility="gone"/>

                    <net.ib.mn.view.ExodusImageView
                        android:id="@+id/photo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        app:fixedAlong="width"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_photo_wrapper3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/rl_photo_wrapper2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.media3.ui.PlayerView
                        android:id="@+id/header_playerview3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_alignTop="@+id/photo3"
                        android:layout_alignBottom="@+id/photo3"
                        app:resize_mode="fill"
                        app:surface_type="texture_view"
                        android:visibility="gone"/>

                    <net.ib.mn.view.ExodusImageView
                        android:id="@+id/photo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        app:fixedAlong="width"/>

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="-14dp">

                <View
                    android:id="@+id/header_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13.6667dp"
                    android:background="@color/main"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="73dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/icon_txt"
                    android:visibility="gone"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rl_rank_name_score"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12.5dp"
                    android:layout_marginEnd="50dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_league"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_light"
                        android:gravity="center"
                        android:layout_alignParentStart="true"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="S" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/rank"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:gravity="center"
                        android:textColor="@color/text_light"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/tv_league"
                        tools:text="123"/>


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/text_light"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="TOMORROW X TOGETHER"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/rank"
                        app:layout_constraintEnd_toStartOf="@id/idol_vote_count"/>

                    <TextView
                        android:id="@+id/group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingBottom="3dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_light"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:text="어벤져스"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintBottom_toBottomOf="@id/name"
                        app:layout_constraintStart_toEndOf="@id/name"
                        app:layout_constraintEnd_toStartOf="@id/idol_vote_count"/>

                    <TextView
                        android:id="@+id/idol_vote_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="bottom"
                        tools:text="23,444표"
                        android:textColor="@color/text_light"
                        android:textSize="10sp"
                        android:paddingBottom="3dp"
                        android:fontWeight="600"
                        app:layout_constraintBottom_toBottomOf="@id/name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toEndOf="@id/group"
                        app:layout_constrainedWidth="true" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12.5dp"
                    android:layout_marginEnd="5dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/circle"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/circle_background_white"
                        android:layout_gravity="center"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_heart"
                        app:layout_constraintEnd_toEndOf="@+id/btn_heart"
                        app:layout_constraintStart_toStartOf="@+id/btn_heart"
                        app:layout_constraintTop_toTopOf="@+id/btn_heart" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_heart"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:src="@drawable/btn_ranking_vote_heart"
                        android:tint="@color/main"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@+id/idol_vote_count"
                        app:layout_constraintTop_toTopOf="parent" />
                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_most_pick_banner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_heart"
                android:layout_width="21dp"
                android:layout_height="17dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/img_popup_heart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_most_pick_banner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/most_in_picks_banner_msg"
                android:textSize="15sp"
                android:textColor="@color/text_default"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_heart"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow_left_to_right"
                android:tint="@color/gray900"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite"
                android:textColor="@color/main"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/btn_favorite_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/btn_heart_extinction"/>

        </LinearLayout>

    </LinearLayout>
</layout>
