<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_attendance_day"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/circle_gray_80_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_attendance_reward"
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:src="@drawable/img_attendance_heart_renewal"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/tv_attendance_reward"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_attendance_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/iv_attendance_reward"
                app:layout_constraintStart_toStartOf="@+id/iv_attendance_reward"
                app:layout_constraintTop_toBottomOf="@+id/iv_attendance_reward"
                tools:ignore="SpUsage"
                tools:text="100" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_attendance_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray200"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpUsage"
                tools:text="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_attendance_complete_day"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/img_attendance_complete_stamp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/cl_attendance_day"
            app:layout_constraintEnd_toEndOf="@+id/cl_attendance_day"
            app:layout_constraintStart_toStartOf="@+id/cl_attendance_day"
            app:layout_constraintTop_toTopOf="@+id/cl_attendance_day" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lo_attendance_stamp_on"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:visibility="invisible"
            app:lottie_loop="false"
            app:lottie_repeatCount="0"
            app:layout_constraintBottom_toBottomOf="@+id/cl_attendance_day"
            app:layout_constraintEnd_toEndOf="@+id/cl_attendance_day"
            app:layout_constraintStart_toStartOf="@+id/cl_attendance_day"
            app:layout_constraintTop_toTopOf="@+id/cl_attendance_day" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
