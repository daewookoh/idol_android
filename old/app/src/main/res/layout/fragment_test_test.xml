<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/background_100">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_my_heart_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Group
                android:id="@+id/cl_my_coupon_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:clickable="true"
                android:focusable="true"
                app:constraint_referenced_ids="tv_my_coupon_title,tv_my_coupon,iv_my_coupon" />

            <net.ib.mn.view.ExodusImageView
                android:id="@+id/photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/menu_profile_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/level"
                android:scaleType="fitXY"
                android:src="@drawable/icon_level_30"
                app:layout_constraintBottom_toBottomOf="@+id/name"
                app:layout_constraintEnd_toStartOf="@+id/name"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/tv_favorite_name"
                app:layout_constraintTop_toTopOf="@+id/name"
                app:layout_constraintVertical_bias="0.7" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textAlignment="viewStart"
                android:textColor="@color/gray900"
                android:paddingEnd="8dp"
                android:paddingStart="0dp"
                android:maxLines="2"
                android:textSize="15sp"
                android:ellipsize="end"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_favorite_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/level"
                app:layout_constraintTop_toTopOf="@id/photo"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constrainedWidth="true"
                tools:text="주황주황" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_favorite_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:textAlignment="viewStart"
                android:textColor="@color/gray900"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_my_vote_agg"
                app:layout_constraintStart_toEndOf="@id/photo"
                app:layout_constraintTop_toBottomOf="@id/name"
                tools:text="아이유" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_vote_agg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:textAlignment="viewStart"
                android:textColor="@color/gray900"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_my_coupon_title"
                app:layout_constraintStart_toEndOf="@id/photo"
                app:layout_constraintTop_toBottomOf="@id/tv_favorite_name"
                app:layout_constrainedWidth="true"
                tools:text="10,476,851" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_agg_description"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:paddingStart="-23dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_help"
                app:layout_constraintBottom_toBottomOf="@+id/tv_my_vote_agg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_my_vote_agg"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="@id/tv_my_vote_agg" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_coupon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:textAlignment="viewStart"
                android:textColor="@color/main_light"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/cl_my_heart_info"
                app:layout_constraintStart_toEndOf="@id/photo"
                app:layout_constraintTop_toBottomOf="@id/tv_my_vote_agg"
                android:text="@string/my_coupon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_coupon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="6dp"
                android:textAlignment="viewStart"
                android:textColor="@color/main_light"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_my_coupon_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/tv_my_coupon_title"
                app:layout_constraintTop_toTopOf="@id/tv_my_coupon_title"
                app:layout_constrainedWidth="true"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_my_coupon"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingStart="-23dp"
                android:paddingTop="3dp"
                android:paddingBottom="10dp"
                android:src="@drawable/icon_bang"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/tv_my_coupon"
                app:layout_constraintTop_toTopOf="@+id/tv_my_coupon" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_my_heart_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_round_boarder_gray80"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/photo"
                app:layout_constraintTop_toBottomOf="@+id/photo">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_my_heart"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_my_heart"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_my_tip"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:layout_marginEnd="13dp"
                    android:src="@drawable/icon_my_tip"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_my_heart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@+id/iv_my_heart"
                    app:layout_constraintTop_toTopOf="@+id/iv_my_heart"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_my_heart_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_dimmed"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_my_heart"
                    android:text="@string/my_info_own_heart" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_my_total_heart_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/main_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_my_heart_title"
                    tools:text="364,790" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_ever_heart_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_dimmed"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/tv_plus"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_my_total_heart_count"
                    android:text="@string/ever_heart" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_my_total_ever_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/main_light"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tv_ever_heart_title"
                    app:layout_constraintStart_toStartOf="@id/tv_ever_heart_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ever_heart_title"
                    tools:text="364,790" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@color/text_dimmed"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_my_total_heart_count" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_daily_heart_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_dimmed"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.3"
                    app:layout_constraintStart_toEndOf="@+id/tv_plus"
                    app:layout_constraintTop_toBottomOf="@+id/tv_my_total_heart_count"
                    android:text="@string/weak_heart" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_my_total_daily_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/main_light"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tv_daily_heart_title"
                    app:layout_constraintStart_toStartOf="@+id/tv_daily_heart_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_daily_heart_title"
                    tools:text="2,680" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_my_today_ever_heart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_round_boarder_gray80"
                android:paddingStart="10dp"
                android:paddingTop="13dp"
                android:paddingEnd="10dp"
                android:paddingBottom="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/photo"
                app:layout_constraintTop_toBottomOf="@+id/cl_my_heart_info">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_today_ever_heart_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:maxLines="2"
                    android:text="@string/myheart_today_earn"
                    android:textAlignment="viewStart"
                    android:textColor="@color/gray900"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/rl_today_ever_heart_progress"
                    app:layout_constraintEnd_toStartOf="@+id/iv_today_ever_heart_description"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constrainedWidth="true" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_today_ever_heart_description"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="-23dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_help"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_today_ever_heart_title"
                    app:layout_constraintEnd_toStartOf="@id/tv_today_ever_heart_count"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/tv_today_ever_heart_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_today_ever_heart_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_today_ever_heart_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_today_ever_heart_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintTop_toTopOf="@+id/tv_today_ever_heart_title"
                    tools:text="869개" />

                <RelativeLayout
                    android:id="@+id/rl_today_ever_heart_progress"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_round_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_today_ever_heart_title">

                    <net.ib.mn.utils.InvertedTextProgressbar
                        android:id="@+id/today_progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_round_red"
                        app:text_size="10dp" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_my_diamond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="13dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintVertical_bias="0"
                android:background="@drawable/bg_round_boarder_gray80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/photo"
                app:layout_constraintTop_toBottomOf="@+id/cl_my_today_ever_heart">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_my_diamond"
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_vote_diamond"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/tv_my_dia_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0.2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_my_dia_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_dimmed"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_my_dia_count"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_my_diamond"
                    android:text="@string/my_info_own_diamond" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_my_dia_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/main_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_my_dia_title"
                    tools:text="364" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_qrcode"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="13dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintVertical_bias="0"
                android:background="@drawable/bg_round_boarder_gray80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/photo"
                app:layout_constraintTop_toBottomOf="@+id/cl_my_diamond">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_qr_slide"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray300"
                    android:gravity="center"
                    android:text="@string/captured_qr_not_available"
                    android:textColor="@color/text_light"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_qr_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/text_default"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_qr_slide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="2022 K Global Heart Dream Awards" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_qr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/main"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/entrance_qrcode"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_qr_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_qr_capture_invalid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/text_dimmed"
                    android:textSize="12sp"
                    android:text="@string/show_qr_staff"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    app:layout_constraintTop_toBottomOf="@id/tv_qr"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_qrcode_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="180dp"
                    android:minHeight="220dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/a_league_progress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_qr_capture_invalid">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_qrcode"
                        android:layout_width="166dp"
                        android:layout_height="166dp"
                        android:visibility="visible"
                        android:layout_marginTop="7dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_remaining_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fix_white"
                        android:text="@string/remaining_time"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@id/iv_qrcode"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/fix_white"
                        android:layout_marginTop="1dp"
                        android:paddingBottom="6dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_remaining_time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_qr_refresh"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/img_awards_qr_refresh"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/cl_qrcode_sub"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_auth_complete"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="13dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintVertical_bias="0"
                android:background="@drawable/bg_round_boarder_gray80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/photo"
                app:layout_constraintTop_toBottomOf="@+id/cl_my_diamond">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_auth_complete"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_img_awards_qr"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_auth_complete_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_default"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    tools:text="2022 K Global Heart Dream Awards"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_auth_complete" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_auth_complete_qr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/text_default"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/entrance_qrcode"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_auth_complete_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_auth_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/text_dimmed"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/auth_completed"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_auth_complete_qr" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                android:id="@+id/in_my_info_bottom_tab"
                layout="@layout/layout_my_info_bottom_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_auth_complete"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
