<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_100"/>
            <corners android:radius="7.5dp"/>
        </shape>
    </item>

    <item android:gravity="start">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/main_light"/>
                <corners android:radius="7.5dp"/>
            </shape>
        </clip>
    </item>
</layer-list>
