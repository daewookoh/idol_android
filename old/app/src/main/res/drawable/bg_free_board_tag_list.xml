<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <color android:color="@android:color/transparent"/>
    </item>
    <item
        android:width="16dp"
        android:gravity="start">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/text_white_black"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:width="16dp"
        android:gravity="end">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="@color/text_white_black"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
