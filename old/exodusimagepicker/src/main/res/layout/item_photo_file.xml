<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/filter_selected"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:translationZ="3dp"
            android:background="#80000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_tint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.4"
            android:visibility="gone"
            android:background="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <ImageView
            android:id="@+id/iv_checked_icon"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:translationZ="7dp"
            android:background="@drawable/ic_icon_checkbox_circle_on_24px"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp" />

        <ImageView
            android:id="@+id/iv_multi_check_icon"
            android:layout_width="21dp"
            android:layout_height="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/circle"
            android:backgroundTint="@color/main"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp" />

        <ImageView
            android:id="@+id/iv_multi_un_check_icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:visibility="gone"
            android:background="@drawable/ic_icon_checkbox_circle_off_24px" />

        <TextView
            android:id="@+id/tv_counter"
            android:layout_width="21dp"
            android:layout_height="21dp"
            app:layout_constraintTop_toTopOf="@+id/iv_multi_check_icon"
            app:layout_constraintStart_toStartOf="@+id/iv_multi_check_icon"
            app:layout_constraintEnd_toEndOf="@+id/iv_multi_check_icon"
            app:layout_constraintBottom_toBottomOf="@+id/iv_multi_check_icon"
            android:textColor="@android:color/white"
            android:translationZ="9dp"
            android:textSize="11dp"
            tools:text="10"
            android:gravity="center" />


        <TextView
            android:id="@+id/tv_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginEnd="5dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/background_100"
            android:layout_marginBottom="5dp"
            android:translationZ="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="01:00" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/cg_multi_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tv_counter,iv_multi_check_icon"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
