<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="folderModel"
            type="feature.common.exodusimagepicker.model.FolderModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="17dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background"
            bind:loadError="@{@drawable/ic_launcher_background}"
            bind:loadImage="@{folderModel.folderThumbNail}" />

        <TextView
            android:id="@+id/tv_album_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{folderModel.folderName}"
            android:textColor="#676262"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_file_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="폴더 이름" />

        <TextView
            android:id="@+id/tv_file_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@{String.valueOf(folderModel.fileCount)+'개'}"
            android:textColor="#8F8E8E"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/tv_album_title"
            tools:text="이미지 개수" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
