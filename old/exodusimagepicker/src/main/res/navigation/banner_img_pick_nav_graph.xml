<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/filePickerFragment"
    android:id="@+id/img_pick_nav_graph">

    <fragment
        android:id="@+id/filePickerFragment"
        android:name="feature.common.exodusimagepicker.fragment.BannerImgFilePickerFragment"
        android:label="FilePickerFragment"
        tools:layout="@layout/fragment_banner_img_file_picker">
        <action
            android:id="@+id/action_filePickerFragment_to_folderListFragment"
            app:enterAnim="@anim/top_to_bottom"
            app:exitAnim="@anim/fadeout"
            app:popExitAnim="@anim/bottom_to_top"
            app:destination="@id/folderListFragment" />
    </fragment>

    <fragment
        android:id="@+id/folderListFragment"
        android:name="feature.common.exodusimagepicker.fragment.FolderListFragment"
        android:label="FolderListFragment"
        tools:layout="@layout/fragment_folder_list">
        <action
            android:id="@+id/action_folderListFragment_to_filePickerFragment2"
            app:destination="@id/filePickerFragment" />
    </fragment>

</navigation>
